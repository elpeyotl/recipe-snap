# ============================================
# Recipe Snap Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit .env to git!

# ============================================
# GEMINI API (Server-side only - NEVER prefix with VITE_)
# ============================================
# Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# APP CONFIG (Optional)
# ============================================
# Set to 'false' to disable snap limit (unlimited snaps for testing)
VITE_LIMIT_SNAPS=true
# Number of free snaps before login required (default: 10)
# VITE_FREE_SNAPS=10

# ============================================
# SUPABASE (Client-side - safe for browser)
# ============================================
# Get from: Supabase Dashboard > Project Settings > API
VITE_SUPABASE_URL=https://xxxxx.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGc...

# ============================================
# SUPABASE (Server-side only - NEVER prefix with VITE_)
# ============================================
SUPABASE_SERVICE_ROLE_KEY=eyJhbGc...

# ============================================
# STRIPE (Server-side only - NEVER prefix with VITE_)
# ============================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs for credit packs
STRIPE_STARTER_PRICE_ID=price_xxxxx
STRIPE_REGULAR_PRICE_ID=price_xxxxx
STRIPE_PRO_PRICE_ID=price_xxxxx
